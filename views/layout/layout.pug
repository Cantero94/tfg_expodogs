html(lang="es")
    head
        meta(charset="UTF-8")
        meta(name="viewport" content="width=device-width, initial-scale=1.0")
        meta(name="description" content="Expodogs")
        meta(name="author" content="Cantero1994")
        title #{tituloWeb} | #{pagina}
        link(rel="shortcut icon" href="img/favicon.ico")
        link(rel='stylesheet', href='styles/style.css')
        link(rel='stylesheet', href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css')
    
    body(class='d-flex flex-column min-vh-100')        
        include header
        .d-flex.flex-row.flex-grow-1
            main.flex-grow-1.col-10
                .container.h-100.p-5
                    include welcome
                    block content
                    include atention
            aside.flex-grow-1.col-2
                .container.shadow.h-100.p-5
                    block asidepanel
        include ./registerModal
        include ./rememberModal
        include footer
        script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js')

