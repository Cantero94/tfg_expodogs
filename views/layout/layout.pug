html(lang="es")
    head
        meta(charset="UTF-8")
        meta(name="viewport" content="width=device-width, initial-scale=1.0")
        meta(name="description" content="Expodogs")
        meta(name="author" content="Cantero1994")
        title #{tituloWeb} | #{pagina}
        link(rel="shortcut icon" href="/img/favicon.ico")
        link(rel="stylesheet", href="/styles/style.css")
        link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css")
        link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css")
        link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css")

    
    body(class='d-flex flex-column min-vh-100')        
        include header
        .d-flex.flex-row.flex-grow-1
            main.flex-grow-1.col-12.col-xxl-9
                .container.h-100.p-5
                    block content
            aside.flex-grow-1.col-3.d-none.d-xxl-block
                .container.shadow.h-100.p-5
                    block asidepanel
        include ../partials/loginModal
        include ../partials/registerModal
        include ../partials/rememberModal
        include ../partials/errorModal
        include ../partials/mensajeModal.pug
        
        include footer

        script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js")
        script(src="/js/register.js")
        script(src="/js/errors.js")
        script(src="/js/login.js")
        script(src="/js/remember.js")
        script(src="/js/mensaje.js")
        script(src="/js/miCuenta.js")
        script(src="/js/misPerros.js")
        script(src="/js/inscribirPerro.js")
        script(src="/js/misInscripcionesYPagos.js")
        script(src="/js/exposiciones.js")
        script(src="/js/accordion.js")
        script.
            //- Pasamos los errores y mensajes a las variables globales de JavaScript 
            window.errores = !{JSON.stringify(errores || [])};
            window.mensaje = !{JSON.stringify(mensaje || "")};

        

