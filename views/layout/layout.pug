html(lang="es")
    head
        meta(charset="UTF-8")
        meta(name="viewport" content="width=device-width, initial-scale=1.0")
        meta(name="description" content="Expodogs")
        meta(name="author" content="Cantero1994")
        title #{tituloWeb} | #{pagina}
        link(rel="shortcut icon" href="img/favicon.ico")
        link(rel='stylesheet', href='styles/style.css')
        link(rel='stylesheet', href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css')
    
    body(class='d-flex flex-column min-vh-100')        
        include header
        .d-flex.flex-row.flex-grow-1
            main.flex-grow-1.col-10
                .container.h-100.p-5
                    include welcome
                    block content
                    include atention
            aside.flex-grow-1.col-2.position-sticky
                .container.shadow.h-100.p-5
                    block asidepanel
                    
        include ../partials/registerModal
        include ../partials/rememberModal
        include ../partials/errorModal
        include ../partials/mensajeModal.pug

        include footer

        script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js')
        script(src="/js/register.js")
        script(src="/js/errors.js")
        script(src="/js/login.js")
        script(src="/js/remember.js")
        script(src="/js/mensaje.js")
        script.
            window.errores = !{JSON.stringify(errores || [])};
            window.mensaje = !{JSON.stringify(mensaje || "")};

        

